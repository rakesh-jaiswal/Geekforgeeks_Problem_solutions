class Solution{   
public:
    int getPairsCount(int arr[], int n, int k) {
        // code here
        unordered_map<int,int>m;
        int c=0;
        for(int i=0;i<n;i++){
            if(m[k-arr[i]]){
              c+=m[k-arr[i]];
               
            }
            
                m[arr[i]]++;
            
        }
        return c;
      
    }
};
